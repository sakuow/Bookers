<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>

<h1 class="head">Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>body</th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |b| %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td><%= link_to "show",book_path(b) %></td>
        <td><%= link_to "edit",edit_book_path(b) %></td>
        <td><%= link_to "destroy",book_path(b),method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h1>New Book</h1>
  <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this book from being saved:
   <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
   <% end %>
  <% end %>

  <%= form_with model:@book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Body</h4>
  <%= f.text_area:body %>
  <p><%= f.submit'Create Book' %></p>
  <% end %>
